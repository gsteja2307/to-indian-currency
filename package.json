{
  "name": "to-indian-currency",
  "author": "https://github.com/gsteja2307",
  "version": "2.0.2",
  "description": "A simple utility to convert numbers into Indian Rupee format and words.",
  "main": "./dist/to-indian-currency.cjs.js",
  "module": "./dist/to-indian-currency.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/to-indian-currency.es.js",
      "require": "./dist/to-indian-currency.cjs.js",
      "default": "./dist/to-indian-currency.es.js"
    }
  },
  "bin": {
    "to-indian-currency": "bin/cli.js"
  },
  "scripts": {
    "build": "vite build && npm run build:types",
    "test": "npm run build && jest --colors --runInBand",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly --outDir dist/types",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "indian currency",
    "currency converter",
    "number to words",
    "INR",
    "npm package",
    "Rupee",
    "indian rupee"
  ],
  "license": "MIT",
  "dependencies": {
    "number-to-words": "^1.2.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "rollup-plugin-license": "^3.6.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-javascript-obfuscator": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gsteja2307/to-indian-currency.git"
  }
}
